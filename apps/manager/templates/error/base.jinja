{% extends 'manager/base.jinja' %}

{% block main_area %}
<div id="container" class="spot">
  <div id="main" class="page-item container-fluid">
    <div id="err" class="text-center">
      <p class="err-title"><i class="fa fa-exclamation-triangle"></i> {% block error_title %}{% endblock %}</p>
      <p class="err-msg">
      {%- if exception.__class__.__name__ in ['Custom404', 'Custom403', 'Custom400'] and exception.__str__() -%}
        {{ exception }}
      {%- else -%}
        {% block error_message %}{% endblock %}
      {%- endif -%}
      </p>
      <div class="err-btn">{% block error_button %}{% endblock %}</div>
    </div>
  </div>
</div>
{% endblock %}
